<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Se o arquivo ou pasta existir fisicamente, acesse-o normalmente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Caso contr√°rio, jogue tudo para o index.php
    RewriteRule ^ index.php [L]
</IfModule>